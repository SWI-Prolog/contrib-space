################################################################

.SUFFIXES: .tex .dvi .doc .pl

PL=@PL@
PLBASE=@PLBASE@
PLARCH=@PLARCH@
PLINCL=@PLINCL@
PKGDOC=$(PLBASE)/doc/packages
PCEHOME=../xpce
LIBDIR=$(PLBASE)/library/space
EXDIR=$(PKGDOC)/examples/space
DESTDIR=

COFLAGS=@COFLAGS@
CWFLAGS=@CWFLAGS@
CMFLAGS=@CMFLAGS@
CIFLAGS=@CIFLAGS@ -I../cpp -I.
CFLAGS=-g $(COFLAGS) $(CWFLAGS) $(CMFLAGS) $(CIFLAGS) @DEFS@
LIBS=@LIBS@
CC=@CC@ $(CFLAGS)
CXX=@CXX@ $(CFLAGS)

PUBLICPL=pl
DOCTOTEX=$(PCEHOME)/bin/doc2tex
PLTOTEX=$(PUBLICPL) -q -s pltotex.pl -g pltotex --
DOC=space
TEX=$(DOC).tex spacepl.tex georss.tex wgs84.tex freebase.tex wkt.tex kml.tex gml.tex space_web_loader.tex
DVI=$(DOC).dvi
PDF=$(DOC).pdf
RUNTEX=../../man/runtex

LD=@LD@
LDFLAGS=-g -ld $(CXX) @LDSOFLAGS@

INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=@INSTALL_DATA@

LIBPL=		space.pl wkt.pl kml.pl gml.pl georss.pl wgs84.pl freebase.pl space_web_loader.pl
TARGETS=	space.@SO@

OBJ=		src/space.o src/globals.o src/Index.o src/Search.o src/Shapes.o src/lock.o src/debug.o

all:		$(TARGETS)

space.@SO@:	$(OBJ)
		$(LD) $(LDFLAGS) -o $@ $(OBJ) $(LIBS)

install:	$(LIBPL)
		mkdir -p $(DESTDIR)$(PLBASE)/lib/$(PLARCH)
		$(INSTALL_PROGRAM) $(TARGETS) $(DESTDIR)$(PLBASE)/lib/$(PLARCH)
		mkdir -p $(DESTDIR)$(LIBDIR)
		$(INSTALL_DATA) $(LIBPL) $(DESTDIR)$(LIBDIR)
		$(INSTALL_DATA) README $(DESTDIR)$(LIBDIR)
		$(PL) -f none -g make -t halt

ln-install::	$(LIBPL)
		$(MAKE) INSTALL_DATA="../ln-install" INSTALL_PROGRAM="../ln-install" install

rpm-install:	install

html-install::
		mkdir -p $(DESTDIR)$(PKGDOC)
		$(INSTALL) -m 644 $(DOC).html $(DESTDIR)$(PKGDOC)

pdf-install::
		mkdir -p $(DESTDIR)$(PKGDOC)
		$(INSTALL) -m 644 $(DOC).pdf $(DESTDIR)$(PKGDOC)

uninstall::
		(cd $(PLBASE)/lib/$(PLARCH) && rm -f $(TARGETS))
		(cd $(LIBDIR) && rm -f $(LIBPL))
		$(PL) -f none -g make -t halt

################################################################
# Testing
################################################################

check::
		$(PL) -q -f test_space.pl -g test_space,halt -t 'halt(1)'

################################################################
# Documentation
################################################################

pdf:		$(PDF)

$(DVI):		$(TEX)
		$(RUNTEX) $(DOC)

$(PDF):		$(TEX)
		$(RUNTEX) --pdf $(DOC)

html:		$(TEX)
		latex2html $(DOC)
		mv html/index.html $(DOC).html
		rm -r html

$(TEX):		$(DOCTOTEX)

spacepl.tex:	space.pl
		$(PLTOTEX) --out=$@ --subsection 'library(space/space)'
georss.tex:	georss.pl
		$(PLTOTEX) --out=$@ --subsection 'library(space/georss)'
wgs84.tex:	wgs84.pl
		$(PLTOTEX) --out=$@ --subsection 'library(space/wgs84)'
wkt.tex:	wkt.pl
		$(PLTOTEX) --out=$@ --subsection 'library(space/wkt)'
kml.tex:	kml.pl
		$(PLTOTEX) --out=$@ --subsection 'library(space/kml)'
gml.tex:	gml.pl
		$(PLTOTEX) --out=$@ --subsection 'library(space/gml)'

.doc.tex:
		$(DOCTOTEX) $*.doc > $*.tex
.pl.tex:
		$(PLTOTEX) $*.pl > $*.tex

################################################################
# Clean
################################################################

clean:
		rm -f $(OBJ) *~ *.o *% a.out core config.log
		rm -f $(DOC).aux $(DOC).ilg $(DOC).log $(DOC).out $(DOC).toc
		rm -f $(DOC).idx $(TEX)

distclean:	clean
		rm -f $(TARGETS) config.cache config.h config.status Makefile
		rm -rf html
